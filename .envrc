# Load .env and export all variables
dotenv_if_exists

# Re-export key Terraform variables explicitly (dotenv handles the rest)
export TF_VAR_project="${TF_VAR_project}"
export TF_VAR_region="${TF_VAR_region}"
export TF_VAR_zone="${TF_VAR_zone}"

# Export GCP convenience vars
export GCP_PROJECT="${GCP_PROJECT}"
export GCP_REGION="${GCP_REGION}"
export GCP_ZONE="${GCP_ZONE}"
